<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="12dp" />
            <stroke android:width="1dip" android:color="@color/button" />
            <gradient android:angle="-90" android:startColor="@color/button" android:endColor="@color/button"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="12dp" />
            <stroke android:width="1dip" android:color="@color/button" />
            <solid android:color="@color/button"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="12dp" />
            <stroke android:width="1dip" android:color="#5e7974" />
            <gradient android:angle="-90" android:startColor="#8dbab3" android:endColor="@color/button" />
        </shape>
    </item>
</selector>